<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %> 
  <body>
    
    <%- include('partials/header-admin') %> 

    <div class="containerEdit">
      <div class="titleSearch">
        <h1>Editar o eliminar producto</h1>
       
          <form class="search-container" action="/admin/search3" method="GET">
            <input type="search" name="search" id="" placeholder="Buscar productos"/>
            <button type="submit"> <i class="fas fa-search"></i></button>
          </form>
        
      </div>
      <% brands.forEach(brand => { %>
       
      <div class="cardProduct">
       

        <div class="description">
          <p>Marca: <%= brand.name%></p>
          
        </div>

        <div class="containerBtns">
          
          <form action="/admin/deleteBrand/<%= brand.id %>?_method=DELETE" method="POST">
            <button type="submit">Eliminar</button>
          </form>
         
        </div>
      </div>
        <% }) %>
      
    </div>
  </body>
</html>
