
    <div class="carrusel">
      <div class="carrusel-items">
        <% products.forEach(product => { %>
        <div class="carrusel-item">
            <div class="sliderbox">
                <div class="imagenBox">
                    <img src="/images/<%- product.image ? product.image[0] : 'default.png' %>">
                </div>
                <p><% if(product.name.length > 19){ %>
                    <% let nameSlice = product.name.slice(0,19) %>
                    <%= nameSlice %>
                <% }else{ %> 
            <%= product.name %> 
        <% } %> </p>
                <p class="price"> $ <%= product.price %> </p>
                <div class="cart">
                    <a href="/products/detalle/<%- product.id %>">Ver producto</a>
                </div>
            </div>
        </div>
        <% }) %>
      </div>
    </div>