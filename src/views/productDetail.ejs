<!DOCTYPE html>
<html lang="en">
<%- include('partials/head')  %> 
<body>
  <%- include('partials/header')  %> 
    <div class="containerProduct maxwidth">
        <!-- Slide section -->

        <section class="imageProduct">
          <h2><%= product.name %> </h2>
          <img class="imgIndividual" src="/images/<%= product.images_product[0].name %> " alt="<%= product.images_product.name%>" />
          <div class="containerSlider">
            <div class="container">
              <input type="radio" id="1" name="image-slide" hidden />
              <input type="radio" id="2" name="image-slide" hidden />
              <input type="radio" id="3" name="image-slide" hidden />
      
              <div class="slide">
                
                <div class="item-slide">
                  
                  <img src="/images/<%= product.images_product[0]?product.images_product[0].name:'default.png' %>" alt="<%= product.modelo %> " />
                </div>
      
                <div class="item-slide">
                  <img src="/images/<%= product.images_product[1]?product.images_product[1].name:'default.png' %>" alt="<%= product.modelo %> " />
                </div>
      
                <div class="item-slide">
                  <img src="/images/<%= product.images_product[2]?product.images_product[2].name:'default.png' %>" alt="<%= product.modelo %> " />
                </div>
              </div>
      
              <div class="pagination">
                <label for="1" class="pagination-item">
                  <img src="/images/<%= product.images_product[0]?product.images_product[0].name:'default.png' %>" alt="<%= product.modelo %> " />
                </label>
      
                <label for="2" class="pagination-item">
                  <img src="/images/<%= product.images_product[1]?product.images_product[1].name:'default.png' %>" alt="<%= product.modelo %> " />
                </label>
      
                <label for="3" class="pagination-item">
                  <img src="/images/<%= product.images_product[2]?product.images_product[2].name:'default.png' %>" alt="<%= product.modelo %> " />
                </label>
              </div>
            </div>
          </div>
        </section>
        <!-- Slide section -->
  
        <!-- Price section -->
        <section class="priceProduct">
          <div class="price">
            <h1>$<%= product.price- (product.price * product.discount)/100   %></h1>
            <hr />
            <p> <strong>Stock:</strong>  5 unidades disponibles</p>
            <p>
              <strong>Cuotas:</strong>  9, 12, 18 sin interes.
            </p>
            <p>
            <label for="cantidad"><strong>Cantidad</strong></label>
            <input type="number" name="cantidad" id="cantidad" value="0" min="0" max="5"/>
            </p>
            <div class="containerBtn">
              <button class="buttonAdd" type="submit">Agregar al carrito</button>
            </div>
          </div>
          <hr />
          <div class="payment">
            <h3>Medios de pago</h3>
            <div>
              <h4>Tarjetas de crédito</h4>
              <div class="tarjetas">
                <img src="/images/visa-seeklogo.com.svg" alt="Visa" />
                <img src="/images/mastercard-seeklogo.com.svg" alt="Mastercard" />
                <img src="/images/amex-american-express-logo.svg" alt="AmericanExpress" />
              </div>
            </div>
            <div>
              <h4>Tarjetas de debito</h4>
              <div class="tarjetas">
                <img src="/images/visa-seeklogo.com.svg" alt="Visa" />
                <img src="/images/mastercard-seeklogo.com.svg" alt="Mastercard" />
                <img src="/images/maestro-seeklogo.com.svg" alt="Maestro" />
            </div>
            </div>
            <div>
              <h4>Efectivo</h4>
              <div class="tarjetas">
                <img src="/images/Rapipago-logo-A91BEC6D1D-seeklogo.com.png" alt="Rapipago" />
                <img src="/images/Pago_Facil-logo-75642B5CCE-seeklogo.com.png" alt="PagoFacil" />
                <img src="/images/provincia-net-logo-33347463AC-seeklogo.com.png" alt="ProvinciaNet" />
              </div>
            </div>
          </div>
        </section>
        <!-- Price section -->
  
        <!-- Product specifications -->
        <section class="specifications">
          <h3>Características del Producto</h3>
          <div> 
            <h4>General</h4>
            <ul>
              <li><strong>Marca:</strong><%= product.brands.name %> </li>
              <li><strong>Modelo:</strong><%= product.name %> </li>
              <li><strong>Ergonómico:</strong> Ergonómico</li>
              <li><strong>Color:</strong><%= product.color %></li>
            </ul>
          </div>
          <div class= "containerDescription">
            <h4>Descripción</h4>
            <p class="description">
            
            
              <%= product.description %> 
            </p>
            </ul>
          </div>
        </section>
        <!-- Product specifications -->
      </div>
      <%- include('partials/footer')  %> 
</body>
</html>